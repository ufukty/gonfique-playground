{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "sourceMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": [
      "@cloudflare/workers-types",
      "node"
    ]
  },
  "include": [
    "src/**/*",
    "worker/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}